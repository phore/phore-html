{
  "name": "phore/html",
  "type": "library",
  "license": "MIT",
  "description": "Fluent HTML Template api",
  "homepage": "https://infracamp.org/phore/",
  "authors": [
    {
      "name": "Matthias Leuffen",
      "email": "m@tth.es"
    }
